<% if (info != '') { %>
  <div class="notification is-info">
      <%= info %>
  </div>
<% } %>

<% if (warning != '') { %>
  <div class="notification is-warning">
      <%= warning %>
  </div>
<% } %>

<form action=
  "/users/<% if (isNew) { %>signup<% } else { %>login<% } %>" 
  method="POST"
  >
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" >
    <label for="username" class="label">Usuario</label>
    <input
      class="input is-info"
      type="text"
      placeholder="Groot"
      id="username"
      name="username"
      required
    />
    <br><br>
    <label for="password" class="label">Password</label>
    <input
      class="input is-info"
      type="password"
      id="password"
      name="password"
      required
    />
    <br><br>
    <input class="button is-info" type="submit" value="Entrar">
</form>